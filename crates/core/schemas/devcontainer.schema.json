{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.devcontainers.org/devcontainer.schema.json",
  "title": "Dev Container Configuration",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "image": {
      "type": "string"
    },
    "dockerFile": {
      "type": "string"
    },
    "features": {
      "type": "object",
      "additionalProperties": {
        "type": ["object", "boolean"],
        "default": {}
      }
    },
    "forwardPorts": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "integer",
            "minimum": 1,
            "maximum": 65535
          },
          {
            "type": "string",
            "pattern": "^\\d{1,5}$"
          },
          {
            "type": "object",
            "required": ["localPort", "containerPort"],
            "properties": {
              "localPort": {
                "type": "integer",
                "minimum": 1,
                "maximum": 65535
              },
              "containerPort": {
                "type": "integer",
                "minimum": 1,
                "maximum": 65535
              },
              "protocol": {
                "type": "string",
                "enum": ["tcp", "udp"],
                "default": "tcp"
              }
            },
            "additionalProperties": false
          }
        ]
      }
    }
  },
  "additionalProperties": true
}
